
<div class="flex min-h-[840px] flex-col sm:mx-auto sm:w-full sm:max-w-sm">
  <div class="flex min-h-full flex-1 flex-col justify-center px-6 py-12 lg:px-8">

    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign up</h2>

    <%= form_with(url: sign_up_path, class: "space-y-6") do |form| %>

      <% if @user.errors.any? %>
        <div class="rounded-md bg-red-50 p-4 mb-10">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <%= form.email_field :email, value: @user.email, required: true, autofocus: true, autocomplete: "email", class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        <p class="text-sm text-gray-500">12 characters minimum.</p>
      </div>

      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>

      <div>
        <%= form.submit "Sign up", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>

    <div>
      <p class="mt-10 text-center text-sm text-gray-500">
        Already signed up?
        <%= link_to "Sign in", sign_in_path, class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>

  </div>
</div>
